<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.DiamondCalcActivity">
    <com.google.android.material.circularreveal.CircularRevealRelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back"
            app:contentPadding="@dimen/_7sdp"
            android:layout_centerVertical="true"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/diamond_calculator"
            android:layout_toRightOf="@id/btn_back"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_15sdp"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp"/>
    </com.google.android.material.circularreveal.CircularRevealRelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">
        <com.google.android.material.circularreveal.CircularRevealLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                android:id="@+id/layout_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginVertical="@dimen/_10sdp">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/img_main"/>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/basic_diamonds"
                    android:textSize="@dimen/_13sdp"
                    android:gravity="center"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/poppins_semibold"/>
            </com.google.android.material.circularreveal.CircularRevealRelativeLayout>
            <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                android:id="@+id/layout_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginVertical="@dimen/_10sdp">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/img_main"/>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/normal_calculator"
                    android:textSize="@dimen/_13sdp"
                    android:gravity="center"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/poppins_semibold"/>
            </com.google.android.material.circularreveal.CircularRevealRelativeLayout>
            <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                android:id="@+id/layout_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginVertical="@dimen/_10sdp">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/img_main"/>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/advance_calculator"
                    android:textSize="@dimen/_13sdp"
                    android:gravity="center"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/poppins_semibold"/>
            </com.google.android.material.circularreveal.CircularRevealRelativeLayout>
        </com.google.android.material.circularreveal.CircularRevealLinearLayout>
    </ScrollView>
</com.google.android.material.circularreveal.CircularRevealRelativeLayout>