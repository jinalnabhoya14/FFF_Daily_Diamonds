<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.EndActivity">
    <com.google.android.material.circularreveal.CircularRevealRelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back"
            app:contentPadding="@dimen/_7sdp"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/btn_back"
            android:text="@string/characters_claim"
            android:gravity="center_vertical"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginStart="@dimen/_10sdp"
            android:textColor="@color/textColor"/>
    </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_below="@+id/toolbar"/>
    <com.google.android.material.circularreveal.CircularRevealRelativeLayout
        android:id="@+id/btn_apply"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/img_main"
        android:layout_marginVertical="@dimen/_10sdp">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/img_main"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/apply_now"
            android:textSize="@dimen/_13sdp"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:fontFamily="@font/poppins_semibold"/>
    </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_final"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/colorAccentLight"
        app:strokeColor="@color/colorAccent"
        app:strokeWidth="@dimen/_1sdp"
        android:visibility="gone"
        android:layout_marginHorizontal="@dimen/_20sdp">
        <com.google.android.material.circularreveal.CircularRevealLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_10sdp">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Congratulation"
                android:textColor="@color/textColor"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_14sdp"
                android:layout_gravity="center_horizontal"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your CHaracter will be added to your collcetion with in 42 huours."
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/textColor"/>
            <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginVertical="@dimen/_10sdp">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/img_main"/>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="OK"
                    android:textSize="@dimen/_13sdp"
                    android:gravity="center"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/poppins_semibold"/>
            </com.google.android.material.circularreveal.CircularRevealRelativeLayout>
        </com.google.android.material.circularreveal.CircularRevealLinearLayout>
    </com.google.android.material.card.MaterialCardView>
</com.google.android.material.circularreveal.CircularRevealRelativeLayout>